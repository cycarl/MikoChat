<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/len_2"
    android:layout_marginBottom="@dimen/len_2"
    android:background="@color/white"
    android:foreground="@drawable/ic_touch_fg"
    android:orientation="horizontal"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_12"
    android:paddingEnd="@dimen/len_16"
    android:paddingBottom="@dimen/len_12">
    
    <com.xana.mikochat.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_gravity="start|center_vertical"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:src="@drawable/default_portrait"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/len_12"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/textAccent"
        android:textSize="@dimen/fontNameSize"
        tools:text="嫉妬の魔女"/>

    <ImageView
        android:id="@+id/im_follow"
        android:layout_width="@dimen/len_32"
        android:layout_height="@dimen/len_32"
        android:layout_gravity="end|center_vertical"
        android:contentDescription="@string/app_name"
        android:src="@drawable/sel_opt_done_add"
        android:foreground="@drawable/ic_touch_fg_btn"
        android:clickable="true"
        android:padding="@dimen/len_2"/>

</LinearLayout>